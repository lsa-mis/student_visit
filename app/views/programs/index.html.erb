<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold">Programs</h1>
      <p class="text-gray-600 mt-1">Department: <%= link_to @department.name, department_path(@department), class: "text-blue-600 hover:text-blue-800" %></p>
    </div>
    <% if policy(Program.new(department: @department)).create? %>
      <%= link_to "New Program", new_department_program_path(@department), class: "bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700" %>
    <% end %>
  </div>

  <%= render partial: "departments/programs_list", locals: { programs: @programs } %>
</div>
