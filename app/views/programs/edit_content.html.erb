<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Edit Program Content</h1>
  <p class="text-gray-600 mb-6">Program: <%= link_to @program.name, department_program_path(@department, @program), class: "text-blue-600 hover:text-blue-800" %></p>

  <%= form_with model: [@department, @program], url: update_content_department_program_path(@department, @program), method: :patch, multipart: true, class: "bg-white shadow rounded-lg p-6" do |form| %>
    <% if @program.errors.any? %>
      <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded mb-4">
        <h2 class="font-bold"><%= pluralize(@program.errors.count, "error") %> prohibited this program from being saved:</h2>
        <ul class="list-disc list-inside mt-2">
          <% @program.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :description, "Description", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <p class="text-sm text-gray-500 mb-2">Write about the department and the program. This content will be displayed on the student dashboard.</p>
      <%= form.rich_text_area :description, class: "w-full" %>
    </div>

    <div class="mb-4">
      <%= form.label :image, "Dashboard Image", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <p class="text-sm text-gray-500 mb-2">Upload an image to display on the student dashboard (recommended size: 600x400).</p>
      <% if @program.image.attached? %>
        <div class="mb-2">
          <%= image_tag @program.image, class: "max-w-xs h-auto rounded" %>
        </div>
      <% end %>
      <%= form.file_field :image, accept: "image/*", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="flex justify-end space-x-4">
      <%= form.submit "Update Content", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
      <%= link_to "Cancel", department_program_path(@department, @program), class: "bg-gray-600 text-white px-4 py-2 rounded hover:bg-gray-700" %>
    </div>
  <% end %>
</div>
