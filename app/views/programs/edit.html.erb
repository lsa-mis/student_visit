<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Edit Program</h1>
  <p class="text-gray-600 mb-6">Department: <%= link_to @department.name, department_path(@department), class: "text-blue-600 hover:text-blue-800" %></p>

  <%= form_with model: [@department, @program], class: "bg-white shadow rounded-lg p-6" do |form| %>
    <% if @program.errors.any? %>
      <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded mb-4">
        <h2 class="font-bold"><%= pluralize(@program.errors.count, "error") %> prohibited this program from being saved:</h2>
        <ul class="list-disc list-inside mt-2">
          <% @program.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
      <div>
        <%= form.label :open_date, "Open Date", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.datetime_local_field :open_date, value: @program.open_date&.strftime("%Y-%m-%dT%H:%M"), class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
      </div>
      <div>
        <%= form.label :close_date, "Close Date", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.datetime_local_field :close_date, value: @program.close_date&.strftime("%Y-%m-%dT%H:%M"), class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
      </div>
    </div>

    <div class="mb-4">
      <%= form.label :questionnaire_due_date, "Questionnaire Due Date", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.datetime_local_field :questionnaire_due_date, value: @program.questionnaire_due_date&.strftime("%Y-%m-%dT%H:%M"), class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="mb-4">
      <%= form.label :held_on_dates, "Program Held-On Dates (dates when the program events occur)", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <div id="held-on-dates-container" class="space-y-2">
        <% if @program.held_on_dates.present? && @program.held_on_dates.is_a?(Array) %>
          <% @program.held_on_dates.each do |date_str| %>
            <div class="flex gap-2 items-center">
              <%= date_field_tag "program[held_on_dates][]", date_str, class: "px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
              <button type="button" onclick="this.parentElement.remove()" class="bg-red-600 text-white px-3 py-2 rounded hover:bg-red-700 text-sm">Remove</button>
            </div>
          <% end %>
        <% end %>
        <div id="add-date-row" class="flex gap-2 items-center">
          <%= date_field_tag "program[held_on_dates][]", nil, class: "px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
          <button type="button" onclick="addHeldOnDateField()" class="bg-blue-600 text-white px-3 py-2 rounded hover:bg-blue-700 text-sm">Add Date</button>
        </div>
      </div>
      <p class="text-xs text-gray-500 mt-1">Add all dates when program events will occur (e.g., March 21, 22, 23)</p>
    </div>

    <div class="mb-4">
      <%= form.label :default_appointment_length, "Default Appointment Length (minutes)", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.number_field :default_appointment_length, min: 1, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="mb-4">
      <%= form.label :google_map_url, "Google Map URL", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_area :google_map_url, rows: 3, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="mb-4">
      <%= form.label :information_email_address, "Information Email Address", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.email_field :information_email_address, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500", placeholder: "e.g., program-info@lsa.umich.edu" %>
      <p class="text-xs text-gray-500 mt-1">This email address will be displayed in student welcome emails as a contact for program questions.</p>
    </div>

    <div class="mb-4">
      <%= form.label :active, class: "flex items-center" do %>
        <%= form.check_box :active, class: "mr-2" %>
        <span class="text-sm font-medium text-gray-700">Set as active program (only one active program per department)</span>
      <% end %>
    </div>

    <div class="flex justify-end space-x-4">
      <%= form.submit "Update Program", class: "bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700" %>
      <%= link_to "Cancel", [@department, @program], class: "bg-gray-600 text-white px-4 py-2 rounded hover:bg-gray-700" %>
    </div>
  <% end %>
</div>

<script>
  function addHeldOnDateField() {
    const container = document.getElementById('held-on-dates-container');
    const addDateRow = document.getElementById('add-date-row');
    const dateInput = addDateRow.querySelector('input[type="date"]');
    const dateValue = dateInput.value;

    // Only add if there's a date value
    if (dateValue) {
      // Create a new row with the date and Remove button
      const newField = document.createElement('div');
      newField.className = 'flex gap-2 items-center';

      // Create the input element
      const input = document.createElement('input');
      input.type = 'date';
      input.name = 'program[held_on_dates][]';
      input.value = dateValue;
      input.className = 'px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500';

      // Create the Remove button element
      const button = document.createElement('button');
      button.type = 'button';
      button.className = 'bg-red-600 text-white px-3 py-2 rounded hover:bg-red-700 text-sm';
      button.textContent = 'Remove';
      button.onclick = function() { this.parentElement.remove(); };

      // Append input and button to the newField div
      newField.appendChild(input);
      newField.appendChild(button);

      // Insert before the add-date-row
      container.insertBefore(newField, addDateRow);

      // Clear the input field for the next date
      dateInput.value = '';
    }
  }
</script>
