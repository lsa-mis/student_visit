<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">New Program</h1>
  <p class="text-gray-600 mb-6">Department: <%= link_to @department.name, department_path(@department), class: "text-blue-600 hover:text-blue-800" %></p>

  <%= form_with model: [@department, @program], class: "bg-white shadow rounded-lg p-6" do |form| %>
    <% if @program.errors.any? %>
      <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded mb-4">
        <h2 class="font-bold"><%= pluralize(@program.errors.count, "error") %> prohibited this program from being saved:</h2>
        <ul class="list-disc list-inside mt-2">
          <% @program.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
      <div>
        <%= form.label :open_date, "Open Date", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.datetime_local_field :open_date, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
      </div>
      <div>
        <%= form.label :close_date, "Close Date", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.datetime_local_field :close_date, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
      </div>
    </div>

    <div class="mb-4">
      <%= form.label :questionnaire_due_date, "Questionnaire Due Date", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.datetime_local_field :questionnaire_due_date, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="mb-4">
      <%= form.label :default_appointment_length, "Default Appointment Length (minutes)", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.number_field :default_appointment_length, value: 30, min: 1, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="mb-4">
      <%= form.label :active, class: "flex items-center" do %>
        <%= form.check_box :active, class: "mr-2" %>
        <span class="text-sm font-medium text-gray-700">Set as active program (only one active program per department)</span>
      <% end %>
    </div>

    <div class="flex justify-end space-x-4">
      <%= form.submit "Create Program", class: "bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700" %>
      <%= link_to "Cancel", department_programs_path(@department), class: "bg-gray-600 text-white px-4 py-2 rounded hover:bg-gray-700" %>
    </div>
  <% end %>
</div>
