<div class="w-full py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto w-full">
    <!-- Hero Section -->
    <div class="text-center mb-12">
      <% if render_page_content("home/index", "hero_title") %>
        <div class="mb-6">
          <%= render_page_content("home/index", "hero_title") %>
        </div>
      <% else %>
        <h1 class="text-5xl sm:text-6xl lg:text-7xl font-bold mb-6 text-transparent bg-clip-text bg-gradient-to-r from-[#00274c] to-[#005499]">
          Student Visit Registration
        </h1>
      <% end %>
      <div class="w-24 h-1 bg-gradient-to-r from-[#00274c] to-[#ffcb05] mx-auto mb-8 rounded-full"></div>
    </div>

    <!-- Main Content Card -->
    <div class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden mb-8">
      <!-- Card Header with Gradient -->
      <div class="bg-gradient-to-r from-[#00274c] to-[#005499] px-8 py-6">
        <h2 class="text-2xl sm:text-3xl font-bold text-white">Welcome</h2>
      </div>

      <!-- Card Body -->
      <div class="px-8 py-8 sm:px-10 sm:py-10">
        <% if render_page_content("home/index", "welcome_message") %>
          <div class="prose prose-lg max-w-none text-gray-700">
            <%= render_page_content("home/index", "welcome_message") %>
          </div>
        <% else %>
          <p class="text-lg sm:text-xl text-gray-700 leading-relaxed mb-6">
            Welcome to the Student Visit Registration. Please log in to access your account and manage your visit information.
          </p>
        <% end %>
      </div>
    </div>

    <!-- Call to Action -->
    <div class="text-center">
      <%= link_to new_session_path,
          class: "inline-flex items-center justify-center px-8 py-4 bg-gradient-to-r from-[#00274c] to-[#005499] text-white text-lg font-semibold rounded-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200 focus:outline-none focus:ring-4 focus:ring-[#00274c] focus:ring-opacity-50" do %>
        <span>Log In</span>
        <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
      <% end %>
    </div>

    <!-- Additional Info Section (Optional) -->
    <div class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
      <div class="p-6 rounded-lg bg-gray-50 hover:bg-gray-100 transition-colors duration-200">
        <div class="w-12 h-12 mx-auto mb-4 bg-[#00274c] rounded-full flex items-center justify-center">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Student Access</h3>
        <p class="text-sm text-gray-600">Manage your visit appointments and questionnaires</p>
      </div>

      <div class="p-6 rounded-lg bg-gray-50 hover:bg-gray-100 transition-colors duration-200">
        <div class="w-12 h-12 mx-auto mb-4 bg-[#005499] rounded-full flex items-center justify-center">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Schedule Management</h3>
        <p class="text-sm text-gray-600">View and manage your calendar events</p>
      </div>

      <div class="p-6 rounded-lg bg-gray-50 hover:bg-gray-100 transition-colors duration-200">
        <div class="w-12 h-12 mx-auto mb-4 bg-[#ffcb05] rounded-full flex items-center justify-center">
          <svg class="w-6 h-6 text-[#00274c]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Secure Platform</h3>
        <p class="text-sm text-gray-600">Your information is protected and secure</p>
      </div>
    </div>
  </div>
</div>
