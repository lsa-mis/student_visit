<div class="container mx-auto px-4 py-8">
  <div class="mb-6">
    <h1 class="text-3xl font-bold">Edit Calendar Event</h1>
    <p class="text-gray-600 mt-1">
      Program: <%= link_to @program.name, department_program_path(@program.department, @program), class: "text-blue-600 hover:text-blue-800" %>
    </p>
  </div>

  <%= form_with model: [@program.department, @program, @calendar_event], class: "bg-white shadow rounded-lg p-6" do |form| %>
    <% if @calendar_event.errors.any? %>
      <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded mb-4">
        <h2 class="font-bold"><%= pluralize(@calendar_event.errors.count, "error") %> prohibited this calendar event from being saved:</h2>
        <ul class="list-disc list-inside mt-2">
          <% @calendar_event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <% if @program.held_on_dates.present? && @program.held_on_dates.is_a?(Array) && @program.held_on_dates.any? %>
      <div class="mb-4 p-3 bg-blue-50 border border-blue-200 rounded-md">
        <p class="text-sm font-medium text-blue-900 mb-1">Available Program Dates:</p>
        <p class="text-sm text-blue-700">
          <%= @program.held_on_dates_list.map { |d| d.strftime('%B %d, %Y') }.join(', ') %>
        </p>
        <p class="text-xs text-blue-600 mt-1">Events can only be created on these dates.</p>
      </div>
    <% else %>
      <div class="mb-4 p-3 bg-yellow-50 border border-yellow-200 rounded-md">
        <p class="text-sm text-yellow-800">Warning: This program has no held-on dates set. Please set them in the program settings first.</p>
      </div>
    <% end %>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
      <div>
        <%= form.label :start_time, "Start Time", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <% if @program.held_on_dates.present? && @program.held_on_dates.is_a?(Array) && @program.held_on_dates.any? %>
          <% start_date_options = @program.held_on_dates_list.dup; start_date_options << @calendar_event.start_time.to_date if @calendar_event.start_time && !@program.held_on_date?(@calendar_event.start_time); start_date_options.sort!.uniq! %>
          <div data-controller="program-datetime" data-program-datetime-initial-value="<%= @calendar_event.start_time&.strftime('%Y-%m-%dT%H:%M') %>" class="flex flex-wrap gap-2 items-end">
            <%= form.hidden_field :start_time, data: { program_datetime_target: "hidden" }, value: @calendar_event.start_time&.strftime("%Y-%m-%dT%H:%M") %>
            <div class="flex-1 min-w-[140px]">
              <select data-program-datetime-target="dateSelect" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" required>
                <% start_date_options.each do |d| %>
                  <option value="<%= d.strftime('%Y-%m-%d') %>"><%= d.strftime('%B %d, %Y') %></option>
                <% end %>
              </select>
            </div>
            <div class="min-w-[100px]">
              <input type="time" data-program-datetime-target="timeInput" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" required>
            </div>
          </div>
        <% else %>
          <%= form.datetime_local_field :start_time, value: @calendar_event.start_time&.strftime("%Y-%m-%dT%H:%M"), class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
        <% end %>
      </div>
      <div>
        <%= form.label :end_time, "End Time", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <% if @program.held_on_dates.present? && @program.held_on_dates.is_a?(Array) && @program.held_on_dates.any? %>
          <% end_date_options = @program.held_on_dates_list.dup; end_date_options << @calendar_event.end_time.to_date if @calendar_event.end_time && !@program.held_on_date?(@calendar_event.end_time); end_date_options.sort!.uniq! %>
          <div data-controller="program-datetime" data-program-datetime-initial-value="<%= @calendar_event.end_time&.strftime('%Y-%m-%dT%H:%M') %>" class="flex flex-wrap gap-2 items-end">
            <%= form.hidden_field :end_time, data: { program_datetime_target: "hidden" }, value: @calendar_event.end_time&.strftime("%Y-%m-%dT%H:%M") %>
            <div class="flex-1 min-w-[140px]">
              <select data-program-datetime-target="dateSelect" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" required>
                <% end_date_options.each do |d| %>
                  <option value="<%= d.strftime('%Y-%m-%d') %>"><%= d.strftime('%B %d, %Y') %></option>
                <% end %>
              </select>
            </div>
            <div class="min-w-[100px]">
              <input type="time" data-program-datetime-target="timeInput" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" required>
            </div>
          </div>
        <% else %>
          <%= form.datetime_local_field :end_time, value: @calendar_event.end_time&.strftime("%Y-%m-%dT%H:%M"), class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
        <% end %>
      </div>
    </div>

    <div class="mb-4">
      <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.rich_text_area :description, class: "w-full" %>
    </div>

    <div class="mb-4">
      <%= form.label :location, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.rich_text_area :location, class: "w-full" %>
    </div>

    <div class="mb-4">
      <%= form.label :notes, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.rich_text_area :notes, class: "w-full" %>
    </div>

    <div class="mb-4">
      <%= form.label :mandatory, class: "flex items-center" do %>
        <%= form.check_box :mandatory, class: "mr-2" %>
        <span class="text-sm font-medium text-gray-700">Mandatory event</span>
      <% end %>
    </div>

    <div class="mb-4">
      <%= form.label :vip_ids, "Participating Faculty", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.collection_check_boxes :vip_ids, @vips, :id, :name do |b| %>
        <div class="flex items-center mb-2">
          <%= b.check_box checked: @calendar_event.participating_faculty.include?(b.object), class: "mr-2" %>
          <%= b.label class: "text-sm text-gray-700" %>
        </div>
      <% end %>
    </div>

    <div class="flex justify-end space-x-4">
      <%= form.submit "Update Calendar Event", class: "bg-green-600 text-white btn-responsive rounded hover:bg-green-700" %>
      <%= link_to "Cancel", department_program_calendar_event_path(@program.department, @program, @calendar_event), class: "bg-gray-600 text-white btn-responsive rounded hover:bg-gray-700" %>
    </div>
  <% end %>
</div>
