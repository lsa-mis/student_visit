<div class="container mx-auto px-4 py-8">
  <div class="mb-6">
    <h1 class="text-3xl font-bold">Bulk Upload Calendar Events</h1>
    <p class="text-gray-600 mt-1">
      Program: <%= link_to @program.name, department_program_path(@program.department, @program), class: "text-blue-600 hover:text-blue-800" %>
    </p>
  </div>

  <%= render "shared/page_instructions",
      page_path: "calendar_events/bulk_upload",
      default_text: "Upload a CSV or Excel file to create multiple calendar events. Required columns: Title, Start Time, End Time (use MM/DD/YYYY HH:MM or YYYY-MM-DD HH:MM). Optional: Description, Location, Notes, Mandatory." %>

  <div class="bg-white shadow rounded-lg p-6 mb-6">
    <h2 class="text-xl font-semibold mb-4">File Format</h2>
    <p class="text-gray-700 mb-2">Upload a CSV or Excel file with the following format:</p>
    <ul class="list-disc list-inside text-gray-700 mb-4">
      <li>First row should be headers (will be skipped)</li>
      <li>Column 1: Title (required)</li>
      <li>Column 2: Start Time (required, format: MM/DD/YYYY HH:MM or YYYY-MM-DD HH:MM)</li>
      <li>Column 3: End Time (required, format: MM/DD/YYYY HH:MM or YYYY-MM-DD HH:MM)</li>
      <li>Column 4: Description (optional, rich text)</li>
      <li>Column 5: Location (optional, rich text)</li>
      <li>Column 6: Notes (optional, rich text)</li>
      <li>Column 7: Mandatory (optional, true/1/yes/y or false/0/no/n, defaults to false)</li>
    </ul>
    <p class="text-sm text-gray-600">
      Calendar events will be created for this program.
    </p>
  </div>

  <%= form_with url: process_bulk_upload_department_program_calendar_events_path(@program.department, @program), method: :post, multipart: true, class: "bg-white shadow rounded-lg p-6" do |form| %>
    <div class="mb-4">
      <%= form.label :file, "Select File (CSV or Excel)", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.file_field :file, accept: ".csv,.xlsx,.xls", required: true, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="flex justify-end space-x-4">
      <%= form.submit "Upload", class: "bg-green-600 text-white btn-responsive rounded hover:bg-green-700" %>
      <%= link_to "Cancel", department_program_calendar_events_path(@program.department, @program), class: "bg-gray-600 text-white btn-responsive rounded hover:bg-gray-700" %>
    </div>
  <% end %>
</div>
