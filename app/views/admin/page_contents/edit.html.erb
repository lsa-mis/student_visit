<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Edit Page Content</h1>

  <%= form_with model: [:admin, @page_content], local: true do |form| %>
    <% if @page_content.errors.any? %>
      <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded mb-4">
        <h2 class="font-bold"><%= pluralize(@page_content.errors.count, "error") %> prohibited this page content from being saved:</h2>
        <ul class="list-disc list-inside">
          <% @page_content.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="mb-4">
        <%= form.label :page_path, "Page Path", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :page_path,
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm bg-gray-100",
            readonly: true %>
      </div>

      <div class="mb-4">
        <%= form.label :area_name, "Area Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :area_name,
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm bg-gray-100",
            readonly: true %>
      </div>

      <div class="mb-4">
        <%= form.label :content, "Content", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.rich_text_area :content,
            class: "w-full" %>
      </div>

      <div class="flex justify-end space-x-4">
        <%= link_to "Cancel", admin_page_contents_path,
            class: "px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50" %>
        <%= form.submit "Update Page Content",
            class: "bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700" %>
      </div>
    </div>
  <% end %>
</div>
