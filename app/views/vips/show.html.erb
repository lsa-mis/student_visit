<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold"><%= @vip.display_name %></h1>
      <p class="text-gray-600 mt-1">Program: <%= link_to @program.name, department_program_path(@department, @program), class: "text-blue-600 hover:text-blue-800" %></p>
    </div>
    <div>
      <% if policy(@vip).update? %>
        <%= link_to "Edit", edit_department_program_vip_path(@department, @program, @vip), class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 mr-2" %>
      <% end %>
      <%= link_to "Back to VIPs", department_program_vips_path(@department, @program), class: "bg-gray-600 text-white px-4 py-2 rounded hover:bg-gray-700" %>
    </div>
  </div>

  <div class="bg-white shadow rounded-lg p-6">
    <dl class="grid grid-cols-1 gap-4 sm:grid-cols-2">
      <div>
        <dt class="text-sm font-medium text-gray-500">Name</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @vip.name %></dd>
      </div>
      <% if @vip.title.present? %>
        <div>
          <dt class="text-sm font-medium text-gray-500">Title</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @vip.title %></dd>
        </div>
      <% end %>
      <div>
        <dt class="text-sm font-medium text-gray-500">Ranking</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @vip.ranking %></dd>
      </div>
      <% if @vip.profile_url.present? %>
        <div>
          <dt class="text-sm font-medium text-gray-500">Profile URL</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= link_to @vip.profile_url, @vip.profile_url, target: "_blank", class: "text-blue-600 hover:text-blue-800" %>
          </dd>
        </div>
      <% end %>
    </dl>
  </div>
</div>
