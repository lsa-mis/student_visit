<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">New VIP</h1>
  <p class="text-gray-600 mb-6">Program: <%= link_to @program.name, department_program_path(@department, @program), class: "text-blue-600 hover:text-blue-800" %></p>

  <%= form_with model: [@department, @program, @vip], class: "bg-white shadow rounded-lg p-6" do |form| %>
    <% if @vip.errors.any? %>
      <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded mb-4">
        <h2 class="font-bold"><%= pluralize(@vip.errors.count, "error") %> prohibited this VIP from being saved:</h2>
        <ul class="list-disc list-inside mt-2">
          <% @vip.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="mb-4">
      <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="mb-4">
      <%= form.label :profile_url, "Profile URL", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.url_field :profile_url, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="mb-4">
      <%= form.label :ranking, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.number_field :ranking, value: 0, min: 0, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
      <p class="mt-1 text-sm text-gray-500">Lower numbers appear first in listings</p>
    </div>

    <div class="mb-4">
      <%= form.label :display_on_student_dashboard, class: "flex items-center" do %>
        <%= form.check_box :display_on_student_dashboard, class: "mr-2" %>
        <span class="text-sm font-medium text-gray-700">Display on student dashboard</span>
      <% end %>
      <p class="mt-1 text-sm text-gray-500">When checked, this faculty/staff member will be shown in the "Contact Us" section on the student dashboard.</p>
    </div>

    <div class="flex justify-end space-x-4">
      <%= form.submit "Create VIP", class: "bg-blue-600 text-white btn-responsive rounded hover:bg-blue-700" %>
      <%= link_to "Cancel", department_program_vips_path(@department, @program), class: "bg-gray-600 text-white btn-responsive rounded hover:bg-gray-700" %>
    </div>
  <% end %>
</div>
