<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Edit Department Content</h1>
  <p class="text-gray-600 mb-6">Department: <%= link_to @department.name, department_path(@department), class: "text-blue-600 hover:text-blue-800" %></p>

  <%= form_with model: @department, url: update_content_department_path(@department), method: :patch, multipart: true, class: "bg-white shadow rounded-lg p-6" do |form| %>
    <% if @department.errors.any? %>
      <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded mb-4">
        <h2 class="font-bold"><%= pluralize(@department.errors.count, "error") %> prohibited this department from being saved:</h2>
        <ul class="list-disc list-inside mt-2">
          <% @department.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :mission_statement, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.rich_text_area :mission_statement, class: "w-full" %>
    </div>

    <div class="mb-4">
      <%= form.label :image, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <% if @department.image.attached? %>
        <div class="mb-2">
          <%= image_tag @department.image, class: "max-w-xs h-auto rounded" %>
        </div>
      <% end %>
      <%= form.file_field :image, accept: "image/*", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="flex justify-end space-x-4">
      <%= form.submit "Update Content", class: "bg-blue-600 text-white btn-responsive rounded hover:bg-blue-700" %>
      <%= link_to "Cancel", department_path(@department), class: "bg-gray-600 text-white btn-responsive rounded hover:bg-gray-700" %>
    </div>
  <% end %>
</div>
