<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">Departments</h1>
    <% if policy(Department).create? %>
      <%= link_to "New Department", new_department_path, class: "bg-blue-600 text-white btn-responsive rounded hover:bg-blue-700" %>
    <% end %>
  </div>

  <% if @departments.any? %>
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Address</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Active Program</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @departments.each do |department| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap">
                <%= link_to department.name, department_path(department), class: "text-blue-600 hover:text-blue-800" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= format_department_address(department).presence || "Not set" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= department.active_program&.name || "None" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <%= link_to "View", department_path(department), class: "text-blue-600 hover:text-blue-800 mr-4" %>
                <% if policy(department).update? %>
                  <%= link_to "Edit", edit_department_path(department), class: "text-indigo-600 hover:text-indigo-800 mr-4" %>
                <% end %>
                <% if policy(department).destroy? %>
                  <%= link_to "Delete", department_path(department), method: :delete,
                      data: { confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-800" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="bg-white shadow rounded-lg p-8 text-center">
      <p class="text-gray-500">No departments found.</p>
      <% if policy(Department).create? %>
        <%= link_to "Create your first department", new_department_path, class: "mt-4 inline-block text-blue-600 hover:text-blue-800" %>
      <% end %>
    </div>
  <% end %>
</div>
