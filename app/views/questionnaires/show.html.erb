<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold"><%= @questionnaire.name %></h1>
      <p class="text-gray-600 mt-1">
        Program: <%= link_to @program.name, department_program_path(@department, @program), class: "text-blue-600 hover:text-blue-800" %>
      </p>
    </div>
    <div>
      <% if policy(@questionnaire).update? %>
        <%= link_to "Edit", edit_department_program_questionnaire_path(@department, @program, @questionnaire), class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 mr-2" %>
        <%= link_to "Add Question", new_department_program_questionnaire_question_path(@department, @program, @questionnaire), class: "bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700" %>
      <% end %>
    </div>
  </div>

  <div class="bg-white shadow rounded-lg p-6">
    <h2 class="text-xl font-semibold mb-4">Questions</h2>
    <% if @questions.any? %>
      <ol class="list-decimal list-inside space-y-4">
        <% @questions.each do |question| %>
          <li class="border-b border-gray-200 pb-4">
            <div class="flex justify-between items-start">
              <div class="flex-1">
                <p class="font-medium"><%= question.text %></p>
                <p class="text-sm text-gray-500 mt-1">Type: <%= question.question_type.humanize %></p>
                <% if question.options_array.any? %>
                  <p class="text-sm text-gray-500">Options: <%= question.options_array.join(", ") %></p>
                <% end %>
              </div>
              <% if policy(question).update? %>
                <div class="flex gap-2 ml-4">
                  <%= link_to "Edit", edit_department_program_questionnaire_question_path(@department, @program, @questionnaire, question), class: "text-indigo-600 hover:text-indigo-800 text-sm" %>
                  <%= link_to "Delete", [@department, @program, @questionnaire, question], method: :delete,
                      data: { confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-800 text-sm" %>
                </div>
              <% end %>
            </div>
          </li>
        <% end %>
      </ol>
    <% else %>
      <p class="text-gray-500">No questions added yet.</p>
      <% if policy(@questionnaire).update? %>
        <%= link_to "Add First Question", new_department_program_questionnaire_question_path(@department, @program, @questionnaire), class: "mt-4 inline-block bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700" %>
      <% end %>
    <% end %>
  </div>
</div>
