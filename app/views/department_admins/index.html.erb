<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold">Department Admins</h1>
      <p class="text-gray-600 mt-1">Department: <%= link_to @department.name, department_path(@department), class: "text-blue-600 hover:text-blue-800" %></p>
    </div>
    <%= link_to "Back to Department", department_path(@department), class: "bg-gray-600 text-white px-4 py-2 rounded hover:bg-gray-700" %>
  </div>

  <div class="bg-white shadow rounded-lg p-6 mb-6">
    <h2 class="text-xl font-semibold mb-4">Add Department Admin</h2>
    <%= form_with url: department_admins_path(@department), method: :post, class: "space-y-4" do |form| %>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Select Existing User</label>
        <%= form.select :user_id,
            options_from_collection_for_select(@users, :id, :email_address),
            { prompt: "Select an existing user (optional)" },
            { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
              id: "user_select" } %>
      </div>

      <div class="relative">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-gray-300"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-2 bg-white text-gray-500">OR</span>
        </div>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Create New User by Email</label>
        <%= form.email_field :email_address,
            placeholder: "user@example.com",
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
            id: "email_input" %>
        <p class="mt-1 text-sm text-gray-500">A user account will be created if it doesn't exist. The user will need to reset their password on first login.</p>
      </div>

      <div>
        <%= form.submit "Add Admin", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
      </div>
    <% end %>

    <script>
      // Clear one field when the other is used
      document.addEventListener('DOMContentLoaded', function() {
        const userSelect = document.getElementById('user_select');
        const emailInput = document.getElementById('email_input');

        userSelect.addEventListener('change', function() {
          if (this.value) {
            emailInput.value = '';
          }
        });

        emailInput.addEventListener('input', function() {
          if (this.value) {
            userSelect.value = '';
          }
        });
      });
    </script>
  </div>

  <div class="bg-white shadow rounded-lg p-6">
    <h2 class="text-xl font-semibold mb-4">Current Admins</h2>
    <% if @department_admins.any? %>
      <ul class="divide-y divide-gray-200">
        <% @department_admins.each do |admin| %>
          <li class="py-3 flex justify-between items-center">
            <span><%= admin.user.email_address %></span>
            <%= link_to "Remove", department_admin_path(@department, admin),
                data: { turbo_method: :delete, confirm: "Are you sure?" },
                class: "text-red-600 hover:text-red-800" %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-gray-500">No admins assigned to this department.</p>
    <% end %>
  </div>
</div>
