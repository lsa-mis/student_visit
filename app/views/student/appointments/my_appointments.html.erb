<div class="container mx-auto px-4 py-8">
  <div class="mb-6">
    <h1 class="text-3xl font-bold">My Appointments</h1>
    <p class="text-gray-600 mt-1">
      Program: <%= link_to @program.name, student_dashboard_path, class: "text-blue-600 hover:text-blue-800" %>
    </p>
  </div>

  <div class="bg-white shadow rounded-lg p-6">
    <% if @appointments.any? %>
      <ul class="divide-y divide-gray-200">
        <% @appointments.each do |appointment| %>
          <li class="py-4">
            <div class="flex justify-between items-center">
              <div>
                <p class="font-semibold"><%= appointment.vip.display_name %></p>
                <p class="text-sm text-gray-500">
                  <%= appointment.start_time.strftime("%B %d, %Y at %I:%M %p") %> -
                  <%= appointment.end_time.strftime("%I:%M %p") %>
                </p>
              </div>
              <%= form_with url: delete_student_department_program_appointment_path(@department, @program, appointment),
                  method: :delete, class: "inline" do |form| %>
                <%= form.submit "Cancel",
                    data: { confirm: "Are you sure you want to cancel this appointment?" },
                    class: "bg-red-600 text-white px-3 py-1 rounded text-sm hover:bg-red-700" %>
              <% end %>
            </div>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-gray-500">You have no appointments scheduled.</p>
    <% end %>
  </div>
</div>
