<div class="container mx-auto px-4 py-8">
  <div class="mb-6">
    <h1 class="text-3xl font-bold">Appointments</h1>
    <p class="text-gray-600 mt-1">
      Program: <%= link_to @program.name, student_dashboard_path, class: "text-blue-600 hover:text-blue-800" %>
    </p>
  </div>

  <% if session[:preview_mode] && current_user&.department_admin_for?(@program.department) %>
    <div class="bg-blue-50 border border-blue-200 text-blue-800 px-4 py-3 rounded mb-4 flex items-center justify-between">
      <span>You are viewing this program as a student.</span>
      <%= link_to "Back to program admin view",
                  department_program_path(@program.department, @program),
                  class: "text-sm font-semibold text-blue-800 underline hover:text-blue-900" %>
    </div>
  <% end %>

  <div class="mt-6 mb-10 pb-6">
    <div class="grid grid-cols-2 md:grid-cols-2 gap-2">
      <%= link_to available_student_department_program_appointments_path(@department, @program),
          class: "bg-green-100 hover:bg-green-200 p-3 rounded-lg text-center transition-colors" do %>
        <div class="text-xl mb-0.5">ðŸ“…</div>
        <div class="text-sm font-semibold">Available Appointments</div>
      <% end %>

      <%= link_to my_appointments_student_department_program_appointments_path(@department, @program),
          class: "bg-blue-100 hover:bg-blue-200 p-3 rounded-lg text-center transition-colors" do %>
        <div class="text-xl mb-0.5">âœ…</div>
        <div class="text-sm font-semibold">My Appointments</div>
      <% end %>
    </div>
  </div>

  <div class="bg-white shadow rounded-lg p-6 mb-6">
    <h2 class="text-xl font-semibold mb-4">My Upcoming Appointments</h2>
    <% if @my_appointments.any? %>
      <ul class="divide-y divide-gray-200">
        <% @my_appointments.each do |appointment| %>
          <li class="py-4">
            <div class="flex justify-between items-center">
              <div>
                <p class="font-semibold"><%= appointment.vip.display_name %></p>
                <p class="text-sm text-gray-500">
                  <%= appointment.start_time.strftime("%B %d, %Y at %I:%M %p") %> -
                  <%= appointment.end_time.strftime("%I:%M %p") %>
                </p>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-gray-500">You have no upcoming appointments.</p>
    <% end %>
  </div>

  <%= render 'student/navigation', show_dashboard_link: true %>
</div>
