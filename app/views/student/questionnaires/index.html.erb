<div class="container mx-auto px-4 py-8">
  <div class="mb-6">
    <h1 class="text-3xl font-bold">Questionnaires</h1>
    <p class="text-gray-600 mt-1">
      Program: <%= link_to @program.name, student_dashboard_path, class: "text-blue-600 hover:text-blue-800" %>
    </p>
  </div>

  <div class="bg-white shadow rounded-lg p-6">
    <% if @questionnaires.any? %>
      <ul class="divide-y divide-gray-200">
        <% @questionnaires.each do |questionnaire| %>
          <li class="py-4">
            <div class="flex justify-between items-center">
              <div>
                <h3 class="text-lg font-semibold"><%= questionnaire.name %></h3>
                <p class="text-sm text-gray-500">
                  <%= questionnaire.questions.count %> question(s)
                </p>
              </div>
              <%= link_to "View/Edit",
                  student_department_program_questionnaire_path(@department, @program, questionnaire),
                  class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
            </div>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-gray-500">No questionnaires available for this program.</p>
    <% end %>
  </div>
</div>
