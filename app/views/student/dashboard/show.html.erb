<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Student Dashboard</h1>

  <% if flash[:notice] %>
    <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded mb-4">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <% if flash[:alert] %>
    <div class="bg-yellow-50 border border-yellow-200 text-yellow-700 px-4 py-3 rounded mb-4">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <% if @enrolled_departments.count > 1 %>
    <div class="bg-white shadow rounded-lg p-6 mb-6">
      <h2 class="text-xl font-semibold mb-4">Select Department</h2>
      <%= form_with url: select_department_student_dashboard_path, method: :post, class: "flex gap-4" do |form| %>
        <%= form.select :department_id,
            options_from_collection_for_select(@enrolled_departments, :id, :name, @selected_department_id),
            { prompt: "Choose a department" },
            { class: "flex-1 px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
              onchange: "this.form.submit()" } %>
      <% end %>
    </div>
  <% end %>

  <% if @selected_department && @active_program %>
    <div class="bg-white shadow rounded-lg p-6" data-controller="modal">
      <div class="flex items-center gap-3 mb-4">
        <h2 class="text-xl font-semibold"><%= @selected_department.name %></h2>
        <button type="button"
                data-action="click->modal#open"
                class="inline-flex items-center justify-center w-7 h-7 rounded-full bg-blue-500 hover:bg-blue-600 text-white shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-all hover:shadow-md"
                aria-label="Department information"
                title="View department information">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
          </svg>
        </button>
      </div>
      <p class="text-gray-600 mb-6">Active Program: <%= @active_program.name %></p>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        <%= link_to student_department_program_questionnaires_path(@selected_department, @active_program),
            class: "bg-blue-100 hover:bg-blue-200 p-6 rounded-lg text-center" do %>
          <div class="text-3xl mb-2">üìù</div>
          <div class="font-semibold">Questionnaires</div>
        <% end %>

        <%= link_to student_department_program_appointments_path(@selected_department, @active_program),
            class: "bg-green-100 hover:bg-green-200 p-6 rounded-lg text-center" do %>
          <div class="text-3xl mb-2">üìÖ</div>
          <div class="font-semibold">Appointments</div>
        <% end %>

        <%= link_to student_department_program_calendar_path(@selected_department, @active_program, filter: "all"),
            class: "bg-purple-100 hover:bg-purple-200 p-6 rounded-lg text-center" do %>
          <div class="text-3xl mb-2">üóìÔ∏è</div>
          <div class="font-semibold">Calendar</div>
        <% end %>

        <%= link_to student_department_map_path(@selected_department),
            class: "bg-yellow-100 hover:bg-yellow-200 p-6 rounded-lg text-center" do %>
          <div class="text-3xl mb-2">üó∫Ô∏è</div>
          <div class="font-semibold">Map</div>
        <% end %>
      </div>

      <!-- Modal -->
      <div data-modal-target="overlay"
           data-action="click->modal#clickOutside"
           class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
        <div data-modal-target="content"
             class="bg-white rounded-lg shadow-xl max-w-md w-full max-h-[90vh] overflow-y-auto">
          <div class="p-6">
            <div class="flex justify-between items-center mb-4">
              <h3 class="text-2xl font-bold text-gray-900"><%= @selected_department.name %></h3>
              <button type="button"
                      data-action="click->modal#close"
                      class="text-gray-400 hover:text-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500 rounded">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
              </button>
            </div>

            <div class="space-y-4">
              <% if format_department_address(@selected_department).present? %>
                <div>
                  <h4 class="text-sm font-semibold text-gray-700 mb-2">Address</h4>
                  <p class="text-gray-600">
                    <%= format_department_address(@selected_department) %>
                  </p>
                  <% if google_maps_url(@selected_department).present? %>
                    <%= link_to google_maps_url(@selected_department),
                        target: "_blank",
                        rel: "noopener noreferrer",
                        class: "inline-flex items-center mt-2 text-blue-600 hover:text-blue-800 font-medium" do %>
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
                      </svg>
                      View on Google Maps
                    <% end %>
                  <% end %>
                </div>
              <% end %>

              <% if @selected_department.main_office_phone_number.present? %>
                <div>
                  <h4 class="text-sm font-semibold text-gray-700 mb-2">Phone</h4>
                  <p class="text-gray-600">
                    <%= link_to @selected_department.main_office_phone_number,
                        "tel:#{@selected_department.main_office_phone_number.gsub(/[^\d+]/, '')}",
                        class: "text-blue-600 hover:text-blue-800" %>
                  </p>
                </div>
              <% end %>

              <% if format_department_address(@selected_department).blank? && @selected_department.main_office_phone_number.blank? %>
                <p class="text-gray-500 italic">No contact information available.</p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% elsif @selected_department %>
    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6" data-controller="modal">
      <div class="flex items-center gap-3 mb-2">
        <p class="text-yellow-800">No active program found for <%= @selected_department.name %>.</p>
        <button type="button"
                data-action="click->modal#open"
                class="inline-flex items-center justify-center w-7 h-7 rounded-full bg-blue-500 hover:bg-blue-600 text-white shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-all hover:shadow-md"
                aria-label="Department information"
                title="View department information">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
          </svg>
        </button>
      </div>

      <!-- Modal -->
      <div data-modal-target="overlay"
           data-action="click->modal#clickOutside"
           class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
        <div data-modal-target="content"
             class="bg-white rounded-lg shadow-xl max-w-md w-full max-h-[90vh] overflow-y-auto">
          <div class="p-6">
            <div class="flex justify-between items-center mb-4">
              <h3 class="text-2xl font-bold text-gray-900"><%= @selected_department.name %></h3>
              <button type="button"
                      data-action="click->modal#close"
                      class="text-gray-400 hover:text-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500 rounded">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
              </button>
            </div>

            <div class="space-y-4">
              <% if format_department_address(@selected_department).present? %>
                <div>
                  <h4 class="text-sm font-semibold text-gray-700 mb-2">Address</h4>
                  <p class="text-gray-600">
                    <%= format_department_address(@selected_department) %>
                  </p>
                  <% if google_maps_url(@selected_department).present? %>
                    <%= link_to google_maps_url(@selected_department),
                        target: "_blank",
                        rel: "noopener noreferrer",
                        class: "inline-flex items-center mt-2 text-blue-600 hover:text-blue-800 font-medium" do %>
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
                      </svg>
                      View on Google Maps
                    <% end %>
                  <% end %>
                </div>
              <% end %>

              <% if @selected_department.main_office_phone_number.present? %>
                <div>
                  <h4 class="text-sm font-semibold text-gray-700 mb-2">Phone</h4>
                  <p class="text-gray-600">
                    <%= link_to @selected_department.main_office_phone_number,
                        "tel:#{@selected_department.main_office_phone_number.gsub(/[^\d+]/, '')}",
                        class: "text-blue-600 hover:text-blue-800" %>
                  </p>
                </div>
              <% end %>

              <% if format_department_address(@selected_department).blank? && @selected_department.main_office_phone_number.blank? %>
                <p class="text-gray-500 italic">No contact information available.</p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <div class="bg-gray-50 border border-gray-200 rounded-lg p-6">
      <p class="text-gray-600">Please select a department to continue.</p>
    </div>
  <% end %>
</div>
