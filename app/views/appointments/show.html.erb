<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold">Appointment Details</h1>
      <p class="text-gray-600 mt-1">
        Program: <%= link_to @program.name, department_program_path(@department, @program), class: "text-blue-600 hover:text-blue-800" %>
      </p>
    </div>
    <div class="flex items-center space-x-2">
      <% if policy(@appointment).destroy? %>
        <%= button_to "Delete Appointment",
                      department_program_appointment_path(@department, @program, @appointment),
                      method: :delete,
                      data: { turbo_confirm: "Are you sure you want to delete this appointment? This cannot be undone." },
                      class: "bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700" %>
      <% end %>
      <%= link_to "Back to Appointments", department_program_appointments_path(@department, @program), class: "bg-gray-600 text-white px-4 py-2 rounded hover:bg-gray-700" %>
    </div>
  </div>

  <% if flash[:notice] %>
    <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded mb-4">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <% if flash[:alert] %>
    <div class="bg-yellow-50 border border-yellow-200 text-green-700 px-4 py-3 rounded mb-4">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Left Column: Appointment Information -->
    <div class="bg-white shadow rounded-lg p-6">
      <h2 class="text-xl font-semibold mb-4">Appointment Information</h2>
      
      <dl class="space-y-4">
        <div>
          <dt class="text-sm font-medium text-gray-500">Status</dt>
          <dd class="mt-1">
            <% if @appointment.available? %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold bg-green-100 text-green-800">Available</span>
            <% else %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold bg-blue-100 text-blue-800">Booked</span>
            <% end %>
          </dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Date</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= @appointment.start_time.strftime("%A, %B %d, %Y") %>
          </dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Time</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= @appointment.start_time.strftime("%I:%M %p") %> - <%= @appointment.end_time.strftime("%I:%M %p") %>
          </dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Duration</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= distance_of_time_in_words(@appointment.start_time, @appointment.end_time) %>
            (<%= ((@appointment.end_time - @appointment.start_time) / 60).to_i %> minutes)
          </dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Created</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= @appointment.created_at.strftime("%B %d, %Y at %I:%M %p") %>
          </dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Last Updated</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= @appointment.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
          </dd>
        </div>
      </dl>
    </div>

    <!-- Right Column: Faculty and Student Information -->
    <div class="space-y-6">
      <!-- Faculty Information -->
      <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-xl font-semibold mb-4">Faculty Member</h2>
        
        <dl class="space-y-4">
          <div>
            <dt class="text-sm font-medium text-gray-500">Name</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= @appointment.vip.name %>
            </dd>
          </div>

          <% if @appointment.vip.title.present? %>
            <div>
              <dt class="text-sm font-medium text-gray-500">Title</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= @appointment.vip.title %>
              </dd>
            </div>
          <% end %>

          <% if @appointment.vip.profile_url.present? %>
            <div>
              <dt class="text-sm font-medium text-gray-500">Profile</dt>
              <dd class="mt-1">
                <%= link_to @appointment.vip.profile_url, @appointment.vip.profile_url, target: "_blank", rel: "noopener noreferrer", class: "text-blue-600 hover:text-blue-800 text-sm" %>
              </dd>
            </div>
          <% end %>
        </dl>
      </div>

      <!-- Student Information -->
      <% if @appointment.student %>
        <div class="bg-white shadow rounded-lg p-6">
          <div class="flex justify-between items-start mb-4">
            <h2 class="text-xl font-semibold">Student</h2>
            <% if policy(@appointment).update? %>
              <%= button_to "Cancel Reservation",
                            release_department_program_appointment_path(@department, @program, @appointment),
                            method: :post,
                            data: { turbo_confirm: "Are you sure you want to cancel this student's reservation? The appointment will become available for other students." },
                            class: "bg-orange-600 text-white px-3 py-1 rounded text-sm hover:bg-orange-700" %>
            <% end %>
          </div>
          
          <dl class="space-y-4">
            <div>
              <dt class="text-sm font-medium text-gray-500">Email Address</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= @appointment.student.email_address %>
              </dd>
            </div>

            <% if @appointment.student.first_name.present? || @appointment.student.last_name.present? %>
              <div>
                <dt class="text-sm font-medium text-gray-500">Name</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <%= [@appointment.student.first_name, @appointment.student.last_name].compact.join(" ") %>
                </dd>
              </div>
            <% end %>

            <% if @appointment.student.umid.present? %>
              <div>
                <dt class="text-sm font-medium text-gray-500">UMID</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <%= @appointment.student.umid %>
                </dd>
              </div>
            <% end %>
          </dl>
        </div>
      <% else %>
        <div class="bg-gray-50 border border-gray-200 rounded-lg p-6">
          <p class="text-gray-500 text-sm">No student assigned to this appointment.</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Appointment History -->
  <% if @appointment.appointment_selections.any? %>
    <div class="mt-6 bg-white shadow rounded-lg p-6">
      <h2 class="text-xl font-semibold mb-4">Appointment History</h2>
      
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date & Time</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Action</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">User</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @appointment.appointment_selections.order(created_at: :desc).each do |selection| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= selection.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm">
                  <% if selection.action == "selected" %>
                    <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Selected</span>
                  <% else %>
                    <span class="px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">Cancelled</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= selection.user.email_address %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>
</div>
