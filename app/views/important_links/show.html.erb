<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold"><%= @important_link.name %></h1>
      <p class="text-gray-600 mt-1">Program: <%= link_to @program.name, department_program_path(@department, @program), class: "text-blue-600 hover:text-blue-800" %></p>
    </div>
    <div class="flex gap-2">
      <% if policy(@important_link).update? %>
        <%= link_to "Edit", edit_department_program_important_link_path(@department, @program, @important_link), class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
      <% end %>
      <%= link_to "Back to Links", department_program_important_links_path(@department, @program), class: "bg-gray-600 text-white px-4 py-2 rounded hover:bg-gray-700" %>
    </div>
  </div>

  <div class="bg-white shadow rounded-lg p-6">
    <div class="space-y-4">
      <div>
        <h3 class="text-sm font-semibold text-gray-700 mb-2">Name</h3>
        <p class="text-gray-900"><%= @important_link.name %></p>
      </div>

      <div>
        <h3 class="text-sm font-semibold text-gray-700 mb-2">URL</h3>
        <p class="text-gray-900">
          <%= link_to @important_link.url, safe_url(@important_link.url), target: "_blank", rel: "noopener noreferrer", class: "text-blue-600 hover:text-blue-800" %>
        </p>
      </div>

      <div>
        <h3 class="text-sm font-semibold text-gray-700 mb-2">Ranking</h3>
        <p class="text-gray-900"><%= @important_link.ranking %></p>
      </div>
    </div>
  </div>
</div>
