<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold">Important Links</h1>
      <p class="text-gray-600 mt-1">Program: <%= link_to @program.name, department_program_path(@department, @program), class: "text-blue-600 hover:text-blue-800" %></p>
    </div>
    <div class="flex gap-2">
      <% if policy(ImportantLink.new(program: @program)).create? %>
        <%= link_to "New Link", new_department_program_important_link_path(@department, @program), class: "bg-blue-600 text-white btn-responsive rounded hover:bg-blue-700" %>
      <% end %>
    </div>
  </div>

  <%= render "shared/page_instructions",
      page_path: "important_links/index",
      default_text: "Add links to display to students on their dashboard, such as program resources, forms, or external sites. Use ranking to control display order." %>

  <div class="bg-white shadow rounded-lg p-6">
    <% if @important_links.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ranking</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">URL</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @important_links.each do |link| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= link.ranking %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  <%= link_to link.name, department_program_important_link_path(@department, @program, link), class: "text-blue-600 hover:text-blue-800" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= link_to "View", link.url, target: "_blank", class: "text-blue-600 hover:text-blue-800" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <% if policy(link).update? %>
                    <%= link_to "Edit", edit_department_program_important_link_path(@department, @program, link), class: "text-indigo-600 hover:text-indigo-800" %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-gray-500">No important links found for this program.</p>
    <% end %>
  </div>
</div>
